<Window x:Class="Brubeck.Peripheral.Monitor"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Brubeck.Peripheral"
		mc:Ignorable="d"
		Title="Brubeck Peripheral" Height="180" Width="240"
		SizeToContent="WidthAndHeight"
		ResizeMode="NoResize">
    <!-- The SizeToContent option will resize to window to accomodate the size of all controls contained -->
	<Grid x:Name="Screen">
		<UniformGrid x:Name="Pixels" Background="Black" Grid.Column="0"/>
	</Grid>
</Window>
